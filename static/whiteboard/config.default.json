{
  "container": {
    "id": "container",
    "input": {
      "size": 10,
      "autoExpand": false,
      "expandStep": 1
    }
  },
  "spanStartIndex": 0,
  "imgStartIndex": 0,
  "shapeStartIndex": 0,
  "toolbar": {
    "id": "toolbar",
    "colorToolId": "color-tool",
    "fontSizeToolId": "font-size-tool",
    "fontFamilyToolId": "font-family-tool",
    "tools": [
      {
        "name": "file",
        "type": "span",
        "lang": "zh-Hant",
        "text": "檔",
        "class": ["icon"],
        "draggable": false,
        "droppable": true,
        "dropAction": ["loadFile"],
        "enable": true
      },
      {
        "name": "remove",
        "type": "span",
        "lang": "zh-Hant",
        "text": "刪",
        "class": ["icon"],
        "draggable": false,
        "droppable": true,
        "dropAction": ["remove"],
        "enable": true
      },
      {
        "name": "font-size",
        "type": "select",
        "labelDraggable": true,
        "dragAction": ["setStyle"],
        "dragArgs": [
          {
            "font-size": "$(this.value)"
          }
        ],
        "label": {
          "text": "號",
          "lang": "zh-Hant",
          "class": ["icon"],
          "style": {
            "marginRight": "2px"
          }
        },
        "options": [
          { "text": "10.5", "value": "10.5pt" },
          { "text": "12", "value": "12pt" },
          { "text": "14", "value": "14pt" },
          { "text": "16", "value": "16pt" },
          { "text": "18", "value": "18pt" },
          { "text": "20", "value": "20pt" },
          { "text": "22", "value": "22pt" },
          { "text": "24", "value": "24pt" },
          { "text": "36", "value": "36pt" },
          { "text": "48", "value": "48pt" },
          { "text": "72", "value": "72pt" }
        ],
        "enable": true
      },
      {
        "name": "font-family",
        "type": "select",
        "labelDraggable": true,
        "dragAction": ["setStyle"],
        "dragArgs": [
          {
            "font-family": "$(this.value)"
          }
        ],
        "label": {
          "text": "體",
          "lang": "zh-Hant",
          "class": ["icon"],
          "style": {
            "marginRight": "2px"
          }
        },
        "options": [
          {
            "text": "serif",
            "value": "serif"
          },
          {
            "text": "sans-serif",
            "value": "sans-serif"
          }
        ],
        "enable": true
      },
      {
        "name": "color",
        "type": "radio",
        "labelDraggable": true,
        "dragAction": ["setStyle"],
        "dragArgs": [{
          "color": "$(this.for.value)",
          "borderColor": "$(this.for.value)"
        }],
        "options": [
          {
            "label": {
              "text": "\u2588",
              "style": {
                "color": "black"
              }
            },
            "value": "black"
          },
          {
            "label": {
              "text": "\u2588",
              "style": {
                "color": "red"
              }
            },
            "value": "red"
          },
          {
            "label": {
              "text": "\u2588",
              "style": {
                "color": "blue"
              }
            },
            "value": "blue"
          },
          {
            "label": {
              "text": "\u2588",
              "style": {
                "color": "green"
              }
            },
            "value": "green"
          },
          {
            "label": {
              "text": "\u2588",
              "style": {
                "color": "purple"
              }
            },
            "value": "purple"
          },
          {
            "label": {
              "text": "\u2588",
              "style": {
                "color": "white"
              }
            },
            "value": "white"
          },
          {
            "label": {
              "text": "\u2588",
              "style": {
                "color": "orange"
              }
            },
            "value": "orange"
          }
        ],
        "enable": true
      },
      {
        "name": "font-weight",
        "type": "span",
        "lang": "zh-Hant",
        "text": "粗",
        "class": ["icon"],
        "style": {
          "fontWeight": "bolder"
        },
        "draggable": true,
        "droppable": true,
        "dragAction": ["setStyle"],
        "dragArgs": [{
          "fontWeight": "bolder"
        }],
        "dropAction": ["setStyle"],
        "dropArgs": [{
          "fontWeight": "unset"
        }],
        "enable": true
      },
      {
        "name": "italic",
        "type": "span",
        "lang": "zh-Hant",
        "text": "斜",
        "class": ["icon"],
        "style": {
          "fontStyle": "italic"
        },
        "draggable": true,
        "droppable": true,
        "dragAction": ["setStyle"],
        "dragArgs": [{
          "fontStyle": "italic"
        }],
        "dropAction": ["setStyle"],
        "dropArgs": [{
          "fontStyle": "unset"
        }],
        "enable": true
      },
      {
        "name": "underline",
        "type": "span",
        "lang": "zh-Hant",
        "text": "線",
        "class": ["icon"],
        "style": {
          "textDecoration": "underline"
        },
        "draggable": true,
        "droppable": true,
        "dragAction": ["setStyle"],
        "dragArgs": [{
          "textDecoration": "underline"
        }],
        "dropAction": ["setStyle"],
        "dropArgs": [{
          "textDecoration": "unset"
        }],
        "enable": true
      },
      {
        "name": "border",
        "type": "span",
        "lang": "zh-Hant",
        "text": "框",
        "class": ["icon"],
        "draggable": true,
        "droppable": true,
        "dragAction": ["setStyle"],
        "dragArgs": [{
          "borderColor":"black",
          "borderWidth": "1px",
          "borderStyle": "solid",
          "padding": "1px"
        }],
        "dropAction": ["setStyle"],
        "dropArgs": [{
          "border": "unset"
        }],
        "enable": true
      },
      {
        "name": "highlight",
        "type": "span",
        "lang": "zh-Hant",
        "text": "亮",
        "class": ["icon"],
        "style": {
          "backgroundColor": "yellow"
        },
        "draggable": true,
        "droppable": true,
        "dragAction": ["setStyle"],
        "dragArgs": [{
          "backgroundColor": "yellow"
        }],
        "dropAction": ["setStyle"],
        "dropArgs": [{
          "backgroundColor": "unset"
        }],
        "enable": true
      },
      {
        "name": "math",
        "type": "span",
        "lang": "zh-Hant",
        "text": "數",
        "class": ["icon"],
        "draggable": true,
        "droppable": true,
        "dragAction": ["typesetMath"],
        "enable": true
      },
      {
        "name": "image-width",
        "type": "input",
        "label": {
          "text": "寬",
          "lang": "zh-Hant",
          "class": ["icon"],
          "style": {
            "marginRight": "2px"
          }
        },
        "labelDraggable": true,
        "dragAction": ["setStyle"],
        "dragArgs": [{
          "width": "$(this.value)px"
        }],
        "inputType": "number",
        "style": {
          "width": "50px"
        },
        "max": 3000,
        "min": 10,
        "step": 5,
        "value": 1000,
        "enable": true
      },
      {
        "name": "line",
        "type": "span",
        "lang": "zh-Hant",
        "text": "－",
        "class": ["icon"],
        "draggable": true,
        "dragAction": ["drawLine"],
        "dragArgs": [{
          "background-color": "black",
          "height": "1px"
        }],
        "enable": true
      },
      {
        "name": "rect",
        "type": "span",
        "lang": "zh-Hant",
        "text": "\u231c",
        "class": ["icon"],
        "draggable": true,
        "dragAction": ["drawRect"],
        "dragArgs": [{
          "borderColor":"black",
          "borderWidth": "1px",
          "borderStyle": "solid"
        }],
        "enable": true
      },
      {
        "name": "circle",
        "type": "span",
        "lang": "zh-Hant",
        "text": "\u25ef",
        "class": ["icon"],
        "draggable": true,
        "dragAction": ["drawCircle"],
        "dragArgs": [{
          "borderColor":"black",
          "borderWidth": "1px",
          "borderStyle": "solid",
          "borderRadius": "50%"
        }],
        "enable": true
      },
      {
        "name": "copy-style",
        "type": "select-input",
        "droppable": true,
        "dropAction": ["setValue"],
        "dropArgs": [{
          "targetId": "$(this.input.id)",
          "value": "element.style['$(this.select.value)']"
        }],
        "labelDraggable": true,
        "dragAction": ["setStyle"],
        "dragArgs": [
          {
            "$(this.select.value)": "$(this.input.value)"
          }
        ],
        "label": {
          "text": "樣",
          "lang": "zh-Hant",
          "class": ["icon"],
          "style": {
            "marginRight": "2px"
          }
        },
        "options": [
          {
            "text": "left",
            "value": "left"
          },
          {
            "text": "top",
            "value": "top"
          },
          {
            "text": "right",
            "value": "right"
          },
          {
            "text": "color",
            "value": "color"
          }
        ],
        "input": {
          "type": "hidden"
        },
        "enable": true
      },
      {
        "name": "language",
        "type": "select",
        "labelDraggable": true,
        "dragAction": ["setAttribute"],
        "dragArgs": [
          {
            "lang": "$(this.value)"
          }
        ],
        "label": {
          "text": "語",
          "lang": "zh-Hant",
          "class": ["icon"],
          "style": {
            "marginRight": "2px"
          }
        },
        "options": [
          {
            "text": "简体中文",
            "value": "zh-Hans"
          },
          {
            "text": "正體中文",
            "value": "zh-Hant"
          },
          {
            "text": "English",
            "value": "en"
          },
          {
            "text": "日本語",
            "value": "ja"
          }
        ],
        "enable": true
      },
      {
        "name": "help",
        "type": "link",
        "text": "？",
        "lang": "zh-Hant",
        "href": "help.html",
        "class": ["icon"],
        "style": {
          "textDecoration": "none",
          "color": "blank"
        },
        "enable": true
      },
      {
        "name": "expand-page",
        "type": "button",
        "text": "+",
        "action": "expandPage",
        "enable": true
      }
    ]
  }
}